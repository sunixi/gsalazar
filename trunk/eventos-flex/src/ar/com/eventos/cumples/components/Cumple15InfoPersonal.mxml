		]]>
	</mx:Script>
	<mx:Fade
		id="fadeIn"
		alphaFrom="0"
		alphaTo="1"
	/>
	<mx:Fade
		id="fadeOut"
		alphaFrom="1"
		alphaTo="0"
	/>
	<mx:Text
		width="70%"
		selectable="false"
		text="InformaciÃ³n Personal"
		textAlign="center"
		styleName="informacionPersonalTitulo"
	/>
	<mx:VBox
		id="topContainer"
		left="5" right="5" 
		top="50"
		verticalGap="0"
		paddingLeft="0" paddingRight="0"
		paddingBottom="0" paddingTop="0"
		height="340" maxHeight="340"
		width="70%"
		horizontalAlign="center" verticalAlign="top">
		<mx:Repeater
			id="comentariosRepeater"
			width="70%" height="100%"
			dataProvider="{informacionPersonal}">
			<mx:VBox
				width="90%"
				paddingLeft="0" paddingRight="0"
				paddingBottom="0" paddingTop="0">
				<mx:Text
					width="60%"
					selectable="false"
					htmlText="{informacionPersonalHTML(comentariosRepeater.currentItem)}"
					textAlign="left"
				/>
			</mx:VBox>
		</mx:Repeater>
	</mx:VBox>
	<mx:Image
		width="320"
		height="450"
		right="5"
		top="50"
