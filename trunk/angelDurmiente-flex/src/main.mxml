	paddingTop="0" paddingRight="0" paddingLeft="0" paddingBottom="0" xmlns:components="ar.angelDurmiente.components.*">
	
	<mx:Style source="styles/styles.css"/>
	<mx:Script>
		<![CDATA[
			import mx.events.ToolTipEvent;
			import mx.managers.ToolTipManager;
			import ar.angelDurmiente.toolTip.VBoxToolTip;
			import ar.angelDurmiente.components.InfoTooltip;
			import mx.managers.BrowserManager;
			
			
			private function onCreationComplete():void {
				BrowserManager.getInstance().setTitle(":: El Angel Durmiente - Solo Para Personas Románticas ::");
			}
			
			private function createCustomTip(title:String, body:String, event:ToolTipEvent):void {
           var ptt:InfoTooltip = new InfoTooltip();
           ptt.title = title;
           ptt.bodyText = body;
           event.toolTip = ptt;
        }


		]]>
	</mx:Script>
	<mx:VBox width="95%" height="95%" backgroundAlpha="0.7">
		<mx:Panel width="100%" height="2%" cornerRadius="20" styleName="footerPanel">
