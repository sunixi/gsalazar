				paddingTop="5" paddingBottom="5" paddingLeft="5" paddingRight="5">
				<mx:Label text="Busqueda General: " fontWeight="bold" fontStyle="italic"/>
				<mx:TextInput id="busquedaTextInput" styleName="searchInput" />
			</mx:HBox>
		</mx:Panel>
		<mx:Panel width="100%" height="20%" cornerRadius="20" styleName="footerPanel" verticalAlign="middle" horizontalAlign="center">
			<mx:Label text="www.elangeldurmiente.com.ar" fontSize="35" color="black"/>
		</mx:Panel>
		<mx:HBox width="100%" height="75%" backgroundAlpha="0.4">
			<mx:Panel width="15%" height="100%" cornerRadius="20" title="Menú" fontSize="15" styleName="menuPanel">
				<mx:Button label="Bienvenido" width="100%" toolTip=" " toolTipCreate="this.createCustomTip('elAngelDurmiente.com.ar','Página Inicial de El Angel Durmiente.', event)"/>
