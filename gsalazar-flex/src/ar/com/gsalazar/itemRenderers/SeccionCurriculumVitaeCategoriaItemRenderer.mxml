<?xml version="1.0" encoding="utf-8"?>
<mx:VBox
	xmlns:mx="http://www.adobe.com/2006/mxml"
	width="90%" height="90%" backgroundAlpha="0.1">
	<mx:Style>
		.horizontalLineStyle {
			color: "blue";	
		}
	</mx:Style>
	<mx:Script>
		<![CDATA[
			import ar.com.gsalazar.beans.ItemCategoria;
			
			private function buildFechasText(data:Object):String{
				return ItemCategoria(data).mostrarFechas();
			}
		]]>
	</mx:Script>
	<mx:DateFormatter id="fechaFormatter" formatString="DD/MM/YYYY"/>
	<mx:VBox width="100%" height="100%" verticalAlign="top" horizontalAlign="left" paddingLeft="0" styleName="articulosAdvancedDataGrid">
		<mx:HBox width="100%">
			<mx:Text height="10%" text="{data.nombre}" fontSize="12" fontWeight="bold" color="black" selectable="false"/>
			<mx:Text height="10%" text="{this.buildFechasText(data)}" fontSize="12" fontWeight="bold" color="black" selectable="false"/>	
		</mx:HBox>
		<mx:HRule width="50%" height="1" styleName="horizontalLineStyle"/>
		<mx:Text height="80%" width="70%" text="{data.descripcion}" fontSize="11" color="black" selectable="false" fontStyle="italic"/>
	</mx:VBox>
	<mx:Spacer height="1%"/>
</mx:VBox>