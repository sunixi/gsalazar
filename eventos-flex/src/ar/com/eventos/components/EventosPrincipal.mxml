<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
	width="100%" height="100%" 
	xmlns:components="ar.com.eventos.components.*">
	<mx:Script>
		<![CDATA[

			private function onClickBackButton(e:Event):void {
				backButton.visible = false;
				menuSecundario.cambiarMensaje();
				pantallaInicial.mostrarInicio();
			}
			
			private function onClickMenu(event:Event):void {
				
			}
			
		]]>
	</mx:Script>
	<mx:Image
		source="@Embed(source='/assets/images/fondo.png')"
		filters="{filters}"
		horizontalCenter="0"
		top="15"
	/>
	<components:PantallaInicial
		id="pantallaInicial"
		width="950"
		height="570"
		borderColor="red" borderStyle="solid" borderThickness="1"
		horizontalCenter="0"
		top="15"
	/>
	<mx:Image
		source="@Embed(source='/assets/images/division.png')"
		horizontalCenter="0"
		top="8"
	/>
	<components:MenuSecundario
		id="menuSecundario"
		width="250" height="90"
		top="220" left="250"
		mostrarMenu="{pantallaInicial.eventosBody.showBackButton}"
		borderColor="yellow" borderStyle="solid" borderThickness="1"
		clickMenu="onClickMenu(event);"
	/>
	<components:UltimasImagenesAgregadas
		width="480" height="80"
		top="268"
		right="170"
		borderColor="yellow" borderStyle="solid" borderThickness="1"
		imagenes="{ultimasImagenesAgregadas}"
	/>
	<mx:Image
		id="backButton"
		source="@Embed(source='/assets/images/back.png')"
		width="32" height="32"
		buttonMode="true" useHandCursor="true"
		left="210" bottom="270"
		showEffect="{fadeIn}"
		hideEffect="{fadeOut}"
		visible="{pantallaInicial.eventosBody.showBackButton}"
		click="onClickBackButton(event);"
		toolTip="Volver Al Menú Inicial."
	/>
	<mx:Fade
		id="fadeIn"
		alphaFrom="0"
		alphaTo="1"
	/>
	<mx:Fade
		id="fadeOut"
		alphaFrom="1"
		alphaTo="0"
	/>
	<mx:Array id="filters">
		<mx:GlowFilter
			id="glowFilter"
			blurX="40"
			blurY="40"
			color="#003399"
			alpha="0.8"
		/>
	</mx:Array>
	<mx:ArrayCollection id="ultimasImagenesAgregadas">
		<mx:Object imagen="@Embed(source='/assets/images/ultimasAgregadas/pic06.jpg')" descripcion="Descripción imagen 01."/>
		<mx:Object imagen="@Embed(source='/assets/images/ultimasAgregadas/pic07.jpg')" descripcion="Descripción imagen 02."/>
		<mx:Object imagen="@Embed(source='/assets/images/ultimasAgregadas/pic08.jpg')" descripcion="Descripción imagen 03."/>
		<mx:Object imagen="@Embed(source='/assets/images/ultimasAgregadas/pic09.jpg')" descripcion="Descripción imagen 04."/>
		<mx:Object imagen="@Embed(source='/assets/images/ultimasAgregadas/pic10.jpg')" descripcion="Descripción imagen 05."/>
		<mx:Object imagen="@Embed(source='/assets/images/ultimasAgregadas/pic11.jpg')" descripcion="Descripción imagen 06."/>
		<mx:Object imagen="@Embed(source='/assets/images/ultimasAgregadas/pic09.jpg')" descripcion="Descripción imagen 07."/>
		<mx:Object imagen="@Embed(source='/assets/images/ultimasAgregadas/pic10.jpg')" descripcion="Descripción imagen 08."/>
		<mx:Object imagen="@Embed(source='/assets/images/ultimasAgregadas/pic11.jpg')" descripcion="Descripción imagen 09."/>
	</mx:ArrayCollection>
	<mx:Style source="/assets/style/style.css"/>
	<components:ShareComponent
		width="150"
		height="55"
		shareSiteGap="0"
		right="165"
		top="20"
	/>

</mx:Canvas>