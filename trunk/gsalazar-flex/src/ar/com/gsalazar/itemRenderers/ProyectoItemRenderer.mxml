<?xml version="1.0" encoding="utf-8"?>
<mx:VBox
	xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:controls="com.asfusion.controls.*"
	styleName="articulosAdvancedDataGrid" >
	<mx:Style>
		.articulosAdvancedDataGrid {
			roundedBottomCorners: true;
			cornerRadius: 23;
		}
		.irSitioStyle {
			border-style:solid;
			roundedBottomCorners: true;
			cornerRadius: 23;
		}
	</mx:Style>
	<mx:Script>
		<![CDATA[
			
			public function irAURL():void {
				navigateToURL(new URLRequest(data.link));			
			}
		]]>
	</mx:Script>
	<!--
	titulo:String;
		public var descripcion:String;
		public var tagsBuscables:IList;
		public var comentarios:IList;
		public var visualizado:Number;
		-->
	<mx:VBox width="95%" verticalAlign="top" horizontalAlign="left" paddingLeft="10">
		<mx:HBox width="100%" height="100%" verticalAlign="middle" horizontalAlign="left">
			<mx:VBox width="10%" height="100%" verticalAlign="top" horizontalAlign="left" paddingLeft="10" paddingTop="5">
				<mx:Image source="{data.imagen}" toolTip="{data.descripcion}" width="60" height="60"/>	
			</mx:VBox>
			<mx:VBox width="80%" height="100%" verticalAlign="top" horizontalAlign="left" paddingLeft="10" paddingTop="5">
				<mx:HBox width="100%" verticalAlign="middle">
					<mx:Label text="{data.titulo}" color="black" fontSize="13" fontWeight="bold" />
					<mx:Label text=" - {String(data.estado).replace('_',' ')}" color="black" fontSize="11" fontWeight="bold" fontStyle="italic"/>
				</mx:HBox>
				<mx:Text width="100%" text="{data.descripcion}" color="black" selectable="false"/>
			</mx:VBox>
			<mx:VBox width="10%" height="100%" verticalAlign="top" horizontalAlign="right" paddingLeft="10" paddingTop="5">
				<mx:Button label="Ver Info..." click="data.buildDetallePopup(this)"/>
			</mx:VBox>
		</mx:HBox>
	</mx:VBox>
</mx:VBox>